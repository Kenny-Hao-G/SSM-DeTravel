<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.deTravel.mapper.FlightMapper">
    <select id="selectFlight" parameterType="FlightInformationVo" resultType="FlightInformation">
        select id,airline,price,restriction,departureTime,wayToCity from db_DeTravel.tb_flight
        where 1=1
        <if test="airline != null and airline != ''">
            and airline=#{airline}
        </if>
        <if test="start != null and start != ''">
            and start like concat('%'#{start}'%')
        </if>
        <if test="destination != null and destination != ''">
            and destination like concat('%'#{destination}'%')
        </if>
        <if test="dateOfDeparture != null and dateOfDeparture != ''">
            and dateOfDeparture=#{dateOfDeparture}
        </if>
        <if test="returnDate != null and returnDate != ''">
            and returnDate=#{returnDate}
        </if>
    </select>
    <select id="selectFlightDetailsById" parameterType="int" resultType="FlightInformation">
        select id,airline,price,restriction,departureTime,wayToCity from db_DeTravel.tb_flight
        where id=#{id}
    </select>


</mapper>